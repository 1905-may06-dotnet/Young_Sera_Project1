@model PizzaBoxWeb.Models.PizzaModel
@using PizzaBoxDomain;

@{
    ViewData["Title"] = "MakePizza";
}

<h1>Make Your Pizza</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToppings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size">
                    <option value=0>@Enum.GetName(typeof(PizzaSize), 0)</option>
                    <option value=1>@Enum.GetName(typeof(PizzaSize), 1)</option>
                    <option value=2>@Enum.GetName(typeof(PizzaSize), 2)</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Crust" class="control-label"></label>
                <select asp-for="Crust">
                    <option value=0>@Enum.GetName(typeof(PizzaCrust), 0)</option>
                    <option value=1>@Enum.GetName(typeof(PizzaCrust), 1)</option>
                    <option value=2>@Enum.GetName(typeof(PizzaCrust), 2)</option>
                    <option value=3>@Enum.GetName(typeof(PizzaCrust), 3)</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Toppings" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


