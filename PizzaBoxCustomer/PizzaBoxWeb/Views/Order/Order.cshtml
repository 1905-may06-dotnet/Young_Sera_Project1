@model PizzaBoxWeb.Models.OrderModel
@using PizzaBoxDomain

@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>

@if (Model != null)
{
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cost)
        </dd>
    </dl>
    @foreach (var pizza in Model.Pizzas)
    {
        <dl class="row">
            <dt class="col-sm-2">
                Cost
            </dt>
            <dd class="col-sm-10">
                pizza.Cost
            </dd>
            <dt class="col-sm-2">
                Crust
            </dt>
            <dd class="col-sm-10">
                @Enum.GetName(typeof(PizzaCrust), pizza.Crust);
            </dd>
            <dt class="col-sm-2">
                Size
            </dt>
            <dd class="col-sm-10">
                @Enum.GetName(typeof(PizzaSize), pizza.Size);
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Topping
            </dt>
            @foreach (var topping in pizza.toppings)
            {
            <dd class="col-sm-10">
                @topping
            </dd>
            }
        </dl>
    

    }
</div>
}