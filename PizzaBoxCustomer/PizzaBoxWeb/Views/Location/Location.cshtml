@model IEnumerable<PizzaBoxWeb.Models.LocationModel>

@{
    ViewData["Title"] = "Location";
}

<h1>Location</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                <a asp-action="LocationOptions" asp-route-id=@item.Id class="btn-link">Select</a>
            </td>
        </tr>
}
    </tbody>
</table>
