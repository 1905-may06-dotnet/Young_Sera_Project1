@model PizzaBoxWeb.Models.OrderModel
@using PizzaBoxDomain

@{
    ViewData["Title"] = "Order";
}
@{ var num = 0;}
<h1>Order</h1>

@if (Model != null)
{
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cost)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.cost)
        </dd>
    </dl>
    @foreach (var pizza in Model.Pizzas)
    {
        { num += 1; }
        <h1>Pizza #@num</h1>
        <dl class="row">
            <dt class="col-sm-2">
                Cost
            </dt>
            <dd class="col-sm-10">
                $@pizza.Cost
            </dd>
            <dt class="col-sm-2">
                Crust
            </dt>
            <dd class="col-sm-10">
                @Enum.GetName(typeof(PizzaCrust), pizza.Crust)
            </dd>
            <dt class="col-sm-2">
                Size
            </dt>
            <dd class="col-sm-10">
                @Enum.GetName(typeof(PizzaSize), pizza.Size)
            </dd>
        </dl>
        if (pizza.toppings.Count > 0)
        {
            @if (pizza.toppings.Count > 1)
            {
                <dl class="row">
                    <dt class="col-sm-2">
                        Toppings
                    </dt>
                </dl>
            }
            else
            {
                <dl class="row">
                    <dt class="col-sm-2">
                        Topping
                    </dt>
                </dl>
            }
            @foreach (var topping in pizza.toppings)
            {
                <dl>
                    <dd class="col-sm-10">
                        @topping
                    </dd>
                </dl>
            }
        }
    }
</div>
    if (Model.Pizzas.Count != 0)
    {
<div>
    <a asp-action="ClearOrder" class="btn-link">Clear</a>
</div>
    }
}